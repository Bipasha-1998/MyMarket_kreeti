<%= form_with model: [ @product, @product.reviews.build ] do |form| %>
    <div class="form-group">
      <%= form.label :reviewer %><br>
      <div class="col-md-4 mb-3">
        <% if logged_in? %>
          <%= form.text_field :reviewer, class: "form-control", value: current_user.username %>
        <% else %>
          <%= form.text_field :reviewer, class: "form-control" %>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :review %><br>
      <div class="col-md-4 mb-3">
        <%= form.text_area :review_body, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= form.submit "Add Review", class: "btn btn-success" %>
    </div>
  <% end %>