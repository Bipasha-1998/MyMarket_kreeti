<div class="row justify-content-center">
    <div class="col-10">
        <%= form_with(model: @category,  class: "shadow p-3 mb-3 rounded", id: "form_temp", local: true) do |f| %>
            <div class="form-group row">
                <%= f.label :Name, class: "col-sm-2 col-form-label" %>
                <div class="col-sm-10">
                    <%= f.text_field :name, class: "form-control", placeholder: "Enter Category Name" %>
                </div>
            </div>
            <br/>
            <div class="text-center">
                <%= f.submit (@category.new_record? ? "Add Category" : "Update Category"), class: "btn btn-outline-success" %>
            </div>
        <% end %>
    </div>
    <%= link_to '[ Cancel and return to products listing ]', products_path, class: "text-primary text-center" %>
    <%= link_to '[ All Categories ]', categories_path, class: "text-primary text-center" %>
</div>