<div id="page-content">
  <h1 class="text-center mt-4">Forgot your password?</h1>
  <div class="row justify-content-center">
    <div class="col-10">
        <%= form_with url: password_reset_path, class: "shadow p-3 mb-3 rounded", id: "form_temp" do |f| %>
          <div class="form-group row">
            <%= f.label 'email:', class: "col-2 col-form-label" %>
            <div class="col-sm-10">
              <%= f.text_field :email, class: "form-control", value: current_user.email %>
            </div>
          </div>
          <br/>
          <div class="text-center">
            <%= f.submit 'Reset Password', class: "btn btn-outline-success" %>
          </div>
        <% end %>
      </div>
      <%= link_to '[ Cancel and return to Home ]', products_path, class: "text-primary text-center" %>
  </div>
</div>
