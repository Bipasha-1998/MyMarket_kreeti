<div class="container">
    <div id="page-content">
        <h1 class="text-center mt-4">Responded Users List</h1>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
            <th scope="col">Username</th>
            <th scope="col">Email</th>
            <th scope="col"  colspan="2" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @product.responsed_user_ids.each do |u| %>
                <% @user = User.find(u) %>
                <tr>
                    <td><%= @user.username %></td>
                    <td><%= @user.email %></td>
                    <td><%= link_to 'Show', user_path(@user) %></td>
                    <% if (logged_in? && @user == current_user) || admin? %>
                        <td><%= link_to 'Edit', edit_user_path(@user) %></td>
                    <% end %>
                </tr>
            <% end %>
        </tbody>
    </table>

    <div class="text-center">
        [<%= link_to 'Create new ad',new_product_path %> | <%= link_to 'Home', admin_approved_products_path %>]
    </div>
</div>
